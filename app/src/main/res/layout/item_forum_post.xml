<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/iv_Avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/student"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="小鹤鹤蛋"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_Avatar"
            app:layout_constraintTop_toTopOf="@id/iv_Avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.7.24"
            android:textColor="#888888"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_Avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/tv_Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="#备考经验我分享# 行测学习总结为三点..."
            android:textSize="14sp"
            android:maxLines="5"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/iv_Avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- 图片（可选显示） -->

        <ImageView
            android:id="@+id/iv_PostImage"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/postexample"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_Content" />


        <!-- 评论1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_comment1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/iv_PostImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_comment1_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户A："
                android:textColor="#2979FF"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment1_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="评论内容1"
                android:textColor="#333333"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/tv_comment1_user"
                app:layout_constraintTop_toTopOf="@id/tv_comment1_user"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 评论2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_comment2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_comment1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_comment2_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户B："
                android:textColor="#2979FF"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment2_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="评论内容2"
                android:textColor="#333333"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/tv_comment2_user"
                app:layout_constraintTop_toTopOf="@id/tv_comment2_user"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 评论3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_comment3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_comment2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_comment3_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户C："
                android:textColor="#2979FF"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment3_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="评论内容3"
                android:textColor="#333333"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/tv_comment3_user"
                app:layout_constraintTop_toTopOf="@id/tv_comment3_user"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <View
            android:id="@+id/view_BottomAnchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_PostImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_Like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            app:layout_constraintTop_toTopOf="@id/iv_Comments"
            app:layout_constraintEnd_toStartOf="@id/iv_Comments"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/iv_Comments"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment"
            app:layout_constraintTop_toBottomOf="@id/view_BottomAnchor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#D6D6D6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

