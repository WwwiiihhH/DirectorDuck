<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logonew2" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_play"
                app:tint="#FFFFFF"
                android:background="#66000000"
                android:padding="4dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2024行测言语理解冲刺班"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1A1C1E"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/courseTitle"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/student"
                app:tint="#757575"/>
            <TextView
                android:id="@+id/courseTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张雪峰"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginStart="4dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_category_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="言语理解"
                android:textSize="10sp"
                android:textColor="#3E54AC"
                android:background="#1A3E54AC"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/courseDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="课程简介..."
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>