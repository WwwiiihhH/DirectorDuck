<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.practice.ui.QuizActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTopInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginTop="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llTopInfobottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.35">

            <TextView
                android:id="@+id/tvCategoryInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="专项练习(政治理论)"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.directorduck_v10.core.widget.MyButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            app:layout_constraintBottom_toTopOf="@id/llTopInfobottom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/clock"
            app:layout_constraintBottom_toTopOf="@id/llTopInfobottom"
            app:layout_constraintStart_toEndOf="@id/back"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/iv_clock"
            app:layout_constraintBottom_toBottomOf="@id/iv_clock"
            app:layout_constraintStart_toEndOf="@id/iv_clock"
            android:textSize="20sp"
            android:layout_marginStart="10sp"/>

        <com.example.directorduck_v10.core.widget.MyButton
            android:id="@+id/iv_answersheet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/answersheet"
            app:layout_constraintTop_toTopOf="@id/iv_clock"
            app:layout_constraintBottom_toBottomOf="@id/iv_clock"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>

        <com.example.directorduck_v10.core.widget.MyButton
            android:id="@+id/iv_pen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pen2"
            app:layout_constraintEnd_toStartOf="@id/iv_answersheet"
            app:layout_constraintTop_toTopOf="@id/iv_answersheet"
            app:layout_constraintBottom_toBottomOf="@id/iv_answersheet"
            android:layout_marginEnd="20dp"/>

        <com.example.directorduck_v10.core.widget.MyButton
            android:id="@+id/iv_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bookmark"
            app:layout_constraintEnd_toStartOf="@id/iv_pen"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/iv_pen"
            app:layout_constraintBottom_toBottomOf="@id/iv_pen"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 题目ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerQuestions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/llTopInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAiHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="AI解题思路"
        app:srcCompat="@drawable/logonew2"
        app:backgroundTint="#446DFF"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 草稿蒙层：默认隐藏，显示时铺满全屏并拦截触摸 -->
    <FrameLayout
        android:id="@+id/draftOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/draftToolbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="top"
            android:background="#3B3F45"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="24dp">

            <ImageButton
                android:id="@+id/btnDraftClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to questions"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@android:color/white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnDraftUndo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Undo last stroke"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnDraftClear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear draft"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@android:color/white" />
        </LinearLayout>

        <com.example.directorduck_v10.core.widget.DraftView
            android:id="@+id/draftView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
