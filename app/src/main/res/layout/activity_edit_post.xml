<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.community.ui.EditPostActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:text="发表"
        android:textColor="#2196F3"
        android:textSize="18dp"
       />



    <!-- 动态文字输入框 -->
    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:hint="分享你的动态..."
        android:gravity="top"
        android:background="@drawable/edittext_bg"
        android:padding="8dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/cancel"
        app:layout_constraintStart_toStartOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="@id/btn_publish"
        android:layout_marginTop="10dp"/>


    <com.example.directorduck_v10.core.widget.MyButton
        android:id="@+id/btn_select_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/selectimg"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        app:layout_constraintStart_toStartOf="@id/cancel"
        android:layout_marginTop="10dp" />




    <!-- 图片预览 -->
    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        app:layout_constraintStart_toStartOf="@id/cancel"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>